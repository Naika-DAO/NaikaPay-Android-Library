<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/signTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Total:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signTransaction"
        app:layout_constraintStart_toStartOf="@+id/signTransaction" />

    <TextView
        android:id="@+id/totalEstimateDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US$0.73"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/totalEstimateETH"
        app:layout_constraintEnd_toStartOf="@+id/totalEstimateETH"
        app:layout_constraintTop_toTopOf="@+id/totalEstimateETH" />

    <TextView
        android:id="@+id/totalEstimateETH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0006 ETH"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Estimated gas fee"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/estimateGasDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US$0.73"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/estimateGasETH"
        app:layout_constraintEnd_toStartOf="@+id/estimateGasETH"
        app:layout_constraintTop_toTopOf="@+id/estimateGasETH" />

    <TextView
        android:id="@+id/estimateGasETH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0006 ETH"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/address_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0xf24s2a6861"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0.023 ETH"
            android:textColor="#000000"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are going to pay 0.0006 ETH from below account"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingTop="16dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>