<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.naika.naikapay">

    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <activity
            android:name="io.naika.naikapay.ui.WalletActivity"
            android:exported="true"
            android:label=""
            android:theme="@style/Theme.Transparent" />

        <receiver
            android:name=".receiver.BillingReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="io.naika.naikapay.connectWallet" />
                <action android:name="io.naika.naikapay.billingSupport" />
            </intent-filter>
        </receiver>
    </application>

</manifest>